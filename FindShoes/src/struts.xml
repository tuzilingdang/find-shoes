	    </action>
	    
	     <action name="unlike" class="com.action.ajaxAction" method="unlike">
	        <result type="json">
	        </result>
	    </action>
	    
	    <action name="collection" class="com.action.ajaxAction" method="collection">
	        <result type="json">
	        </result>
	    </action>
    
